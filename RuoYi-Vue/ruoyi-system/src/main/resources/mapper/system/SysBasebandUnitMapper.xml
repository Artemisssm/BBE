<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.SysBasebandUnitMapper">
    
    <resultMap type="SysBasebandUnit" id="SysBasebandUnitResult">
        <result property="unitId"    column="unit_id"    />
        <result property="unitName"    column="unit_name"    />
        <result property="unitType"    column="unit_type"    />
        <result property="channelNo"    column="channel_no"    />
        <result property="status"    column="status"    />
        <result property="version"    column="version"    />
        <result property="modeType"    column="mode_type"    />
        <result property="macroId"    column="macro_id"    />
        <result property="macroName"    column="macro_name"    />
        <result property="remark"    column="remark"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectSysBasebandUnitVo">
        select u.unit_id, u.unit_name, u.unit_type, u.channel_no, u.status, u.version, u.mode_type, 
               u.macro_id, m.macro_name,
               u.remark, u.create_by, u.create_time, u.update_by, u.update_time 
        from sys_baseband_unit u
        left join sys_baseband_macro m on u.macro_id = m.macro_id
    </sql>

    <select id="selectSysBasebandUnitList" parameterType="SysBasebandUnit" resultMap="SysBasebandUnitResult">
        <include refid="selectSysBasebandUnitVo"/>
        <where>  
            <if test="unitName != null  and unitName != ''"> and u.unit_name like concat('%', #{unitName}, '%')</if>
            <if test="unitType != null  and unitType != ''"> and u.unit_type = #{unitType}</if>
            <if test="status != null  and status != ''"> and u.status = #{status}</if>
        </where>
        order by u.unit_id asc
    </select>
    
    <select id="selectSysBasebandUnitByUnitId" parameterType="Long" resultMap="SysBasebandUnitResult">
        <include refid="selectSysBasebandUnitVo"/>
        where unit_id = #{unitId}
    </select>
        
    <insert id="insertSysBasebandUnit" parameterType="SysBasebandUnit" useGeneratedKeys="true" keyProperty="unitId">
        insert into sys_baseband_unit
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="unitName != null and unitName != ''">unit_name,</if>
            <if test="unitType != null and unitType != ''">unit_type,</if>
            <if test="channelNo != null">channel_no,</if>
            <if test="status != null">status,</if>
            <if test="version != null">version,</if>
            <if test="modeType != null and modeType != ''">mode_type,</if>
            <if test="macroId != null">macro_id,</if>
            <if test="remark != null">remark,</if>
            <if test="createBy != null">create_by,</if>
            create_time
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="unitName != null and unitName != ''">#{unitName},</if>
            <if test="unitType != null and unitType != ''">#{unitType},</if>
            <if test="channelNo != null">#{channelNo},</if>
            <if test="status != null">#{status},</if>
            <if test="version != null">#{version},</if>
            <if test="modeType != null and modeType != ''">#{modeType},</if>
            <if test="macroId != null">#{macroId},</if>
            <if test="remark != null">#{remark},</if>
            <if test="createBy != null">#{createBy},</if>
            sysdate()
         </trim>
    </insert>

    <update id="updateSysBasebandUnit" parameterType="SysBasebandUnit">
        update sys_baseband_unit
        <trim prefix="SET" suffixOverrides=",">
            <if test="unitName != null and unitName != ''">unit_name = #{unitName},</if>
            <if test="unitType != null and unitType != ''">unit_type = #{unitType},</if>
            <if test="channelNo != null">channel_no = #{channelNo},</if>
            <if test="status != null">status = #{status},</if>
            <if test="version != null">version = #{version},</if>
            <if test="modeType != null">mode_type = #{modeType},</if>
            <if test="macroId != null">macro_id = #{macroId},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            update_time = sysdate()
        </trim>
        where unit_id = #{unitId}
    </update>

    <delete id="deleteSysBasebandUnitByUnitId" parameterType="Long">
        delete from sys_baseband_unit where unit_id = #{unitId}
    </delete>

    <delete id="deleteSysBasebandUnitByUnitIds" parameterType="String">
        delete from sys_baseband_unit where unit_id in 
        <foreach item="unitId" collection="array" open="(" separator="," close=")">
            #{unitId}
        </foreach>
    </delete>
</mapper>
